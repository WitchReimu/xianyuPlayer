<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_encode_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="将文件解码再编码"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_start_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始录屏"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_request_mediaProject" />

    <Button
        android:id="@+id/btn_start_capture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始截屏"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_record" />

    <Button
        android:id="@+id/btn_request_mediaProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取mediaProjection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_encode_test" />

    <Button
        android:id="@+id/btn_temp_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="临时测试"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_temp_test2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="临时测试2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_temp_test" />

    <Button
        android:id="@+id/btn_mediacodec_encode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="截屏并将数据发送给mediacodec"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_capture" />


</androidx.constraintlayout.widget.ConstraintLayout>